.container
  %h1.home-title TodoList
  - @tasks.each do |task|
    = link_to task_path(task) do
      .card_title
        .task_title
          = task.title
        .article_detail_actions
          .dropdown
            .dropbtn
              %a.btn-circle-flat{:div => "", :href => "#"}
            .dropdown-content
              = link_to 'Edit', edit_task_path(task.id)
              = link_to 'Delete', task_path(task), data: { method: 'delete' }
          .card_content
            = task.content
          .card_content2
            = task.limit
          .card_detail
            = image_tag 'Oval.png'
      = link_to new_task_path do
        .card_new
          %p.card_new_title + Add new task
